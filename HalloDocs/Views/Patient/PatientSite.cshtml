@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>

<body>

    <div class=" position-absolute h-100 w-100 d-flex flex-column justify-content-between align-items-center ">
        <button type="button" class="btn btn-outline-info position-absolute top-0 end-0 m-3" onclick="dark_mode()">
            <i class="bi bi-moon moon-icon "></i>
        </button>

        <img src="~/SRS Screen Shorts/Fig56. Patient site 1.png" alt="">

        <div class="d-grid  justify-content-center col-6 mx-auto">
            <button class="btn btn-info btn-lg btn-block px-5 " type="submit" onclick="window.location.href = '@Url.Action("RequestTypes", "Patient")';">
                Submit A Request
            </button> &nbsp;&nbsp;

            <button class="btn btn-primary btn-lg btn-block px-5 " type="submit" onclick="window.location.href = '@Url.Action("PatientLoginPage", "Patient")';">
                Register A Patient
            </button>

            <button class="btn btn-danger btn-lg btn-block px-5 mt-5 " type="submit" onclick="window.location.href = '@Url.Action("AdminDashboard", "Admin")';">
                AdminDashboard
            </button>
        </div>
        <div class=" text-center mb-5 ">
            <a class="text-muted text-decoration-none" href="#">Terms Of Conditions</a> |
            <a class="text-muted text-decoration-none" href="#">Privacy Policy</a>
        </div>

    </div>

</body>

</html>