@{
    var firstname = Context.Request.Cookies["FirstName"];
    var lastname = Context.Request.Cookies["LastName"];
}

<header class="shadow container-fluid sticky-top bg-white mx-0 py-1" >
    <div class="header-all Small bg-white d-flex justify-content-between align-items-center sticky-top bg-white align-text-center ">
        <button class="navbar-toggler d-md-none p-0 m-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
            <i class="bi bi-list btn btn-outline-info"></i>
        </button>
        <a class="navbar-brand ">
            <img src="~/SRS Screen Shorts/Fig56. Patient site 11.png" alt="" width="100" height="60">
        </a>
        <div class="d-flex justify-content-between align-items-center">
            <p class="mt-2 pt-2 align-items-center d-none d-md-block" id="welcome-text"><strong>Welcome </strong> @firstname  @lastname</p>
            <a type="button" class="btn btn-outline-info justify-content-center mx-3 d-none d-md-block "  asp-action="PatienLogout" asp-controller="Patient" >LogOut</a>
            <a type="button" class="btn btn-outline-info justify-content-center mx-2 d-block d-md-none" asp-action="PatienLogout" asp-controller="Patient"><i class="bi bi-box-arrow-right"></i></a>
            <button type="button" class="btn btn-outline-info  " onclick="darkmode()"><i class="bi bi-moon moon-icon "></i></button>
        </div>
    </div>
    <hr class="container-fluid m-0 d-none d-md-block" />

    <nav class=" navbar navbar-expand-md py-0 my-0" aria-label="Offcanvas navbar medium">
        <div class="container-fluid">
            <div class="offcanvas offcanvas-start text-bg-light" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasExampleLabel">Welcome <strong>@firstname  @lastname</strong></h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav nav-underline flex-grow-1">
                        <li class="nav-item me-4">
                            <a class="nav-link fw-bold active" asp-action="PatientDashboard" asp-controller="Patient" id="patientdashboard">Dashboard</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link fw-bold" asp-action="PatientUserProfile" asp-controller="Patient" id="patientprofile">My Profile</a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>
