@model HalloDocs.Entities.ViewModels.PatientRequestViewModel
@{
    Layout = "_Layout";
}
<partial name="~/Views/Shared/_Header.cshtml" />

<div class="min-h-100 d-flex flex-column justify-content-between align-items-center ">
    <div class="container pb-5 ">
        <div class="backbtn my-2 py-2 d-flex justify-content-end align-items-start">
            <a asp-route="SubmitRequestTypes" class="p-1 btn btn-outline-info"> &lt; Back  </a>
        </div>

        <form asp-controller="Patient" asp-action="PatientsTypeRequest" class="ps-4 shadow-lg boder-0 bg-white " enctype="multipart/form-data" method="post">

            <h5 class="pt-4">Patient Information</h5>

            <div class="row input-group justify-content-between align-items-center">
                <div class="col-12 mb-3 ">
                    <div class="form-floating ">
                        <textarea asp-for="Symptoms" class="form-control symp-textarea" id="exampleFormControlTextarea1" rows="5" placeholder="Enter Brief Details Of Symptoms (Optional)"></textarea>
                        <label asp-for="Symptoms">Enter Brief Details Of Sympotonms (Optional)</label>
                        <span asp-validation-for="Symptoms" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-12 col-md-6 col-lg-6 mb-3 ">
                    <div class="form-floating ">
                        <input asp-for="FirstName" class="form-control" id="First-Name" placeholder="First Name" >
                        <label asp-for="FirstName">Your First Name</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class=" col-12 col-md-6 col-lg-6 mb-3">
                    <div class="form-floating ">
                        <input asp-for="LastName" class="form-control" type="text" id="Last-Name" placeholder="Last Name" >
                        <label asp-for="LastName">Your Last Name</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                </div>
                <div class=" col-12 col-md-6 col-lg-6 mb-3">
                    <div class="form-floating ">
                        <input asp-for="DateOfBirth" class="form-control" type="date" id="date-of-birth" max="@DateTime.Now.ToString("yyyy-MM-dd")" placeholder="date-of-birth" >
                        <label asp-for="DateOfBirth">Date Of Birth</label>
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>


                </div>

            </div>
            <h5 class="pt-4">Patient Contact Information</h5>
            <div class=" row input-group mb-3 justify-content-between align-items-center">
                <div class="col-12 col-md-6 col-lg-6 mb-3 ">
                    <div class="form-floating ">
                        <input asp-for="Email" class="form-control" id="Email" placeholder="Email " onblur="checkUser()" >
                        <label asp-for="Email">Your Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6 mb-3 ">
                    <div class="form-floating ">
                        <input asp-for="ContryCode" id="CountryCode" type="hidden" />
                        <input asp-for="PhoneNumber" type="tel" class="form-control" id="PhoneNumber" onchange="validatePhoneNumber()">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <span  id="textChange"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6 mb-3" id="passdiv" style="display:none;">
                    <div class="form-floating ">
                        <input asp-for="PasswordHash" class="form-control"  placeholder="Password" >
                        <label asp-for="PasswordHash">Password</label>
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6 mb-3" id="confpassdiv" style="display:none;">
                    <div class="form-floating ">
                        <input asp-for="ConfirmPassword" class="form-control"  placeholder="Confirm Password">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <h5 class="pt-4">Patient Location</h5>
            <div class="row input-group mb-3 justify-content-between align-items-center">
                <div class=" col-12 col-md-6 col-lg-6 mb-3 row2">
                    <div class="form-floating">
                        <input asp-for="Street" class="form-control" type="text" id="Street" placeholder="Street" >
                        <label asp-for="Street">Street</label>
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                </div>
                <div class=" col-12 col-md-6 col-lg-6 mb-3 row2">
                    <div class="form-floating">
                        <input asp-for="City" class="form-control" type="text" id="City" placeholder="City"  />
                        <label asp-for="City">City</label>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class=" col-12 col-md-6 col-lg-6 mb-3 row2">
                    <div class="form-floating">
                        <input asp-for="State" class="form-control" type="text" id="State" placeholder="State" >
                        <label asp-for="State">State</label>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                </div>
                <div class=" col-12 col-md-6 col-lg-6 mb-3 row2">
                    <div class="form-floating">
                        <input asp-for="ZipCode" class="form-control" type="text" id="Zip Code" placeholder="Zip Code" >
                        <label asp-for="ZipCode">Zip Code</label>
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                </div>
                <div class=" col-12 col-md-6 col-lg-6 mb-3 row2">
                    <div class="form-floating">
                        <input asp-for="PatientRoomNumber" class="form-control" type="text" id="Room" name="Room" placeholder="Room #/ Suit (Optional)" >
                        <label asp-for="PatientRoomNumber">Room # / Suit (Optional)</label>
                        <span asp-validation-for="PatientRoomNumber" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <h5 class="pt-4">(Optional) Upload Photo Or document</h5>
            <div class="input-group mb-3">
                <label class="input-group-text custom-file-upload w-100" for="patientFile">
                    <div class="w-100 d-flex justify-content-between">
                        <p class="m-0 p-0" id="fileName">Select File</p>
                        <div class="d-flex upload-button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#FFFFFF"
                                 class="bi bi-cloud-arrow-up" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                      d="M7.646 5.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 6.707V10.5a.5.5 0 0 1-1 0V6.707L6.354 7.854a.5.5 0 1 1-.708-.708z" />
                                <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
                            </svg>
                            <span>Upload</span>
                        </div>
                    </div>
                </label>
                <input asp-for="formFile" type="file" class="form-control d-none" id="patientFile" onchange="GetFileSizeNameAndType()"  multiple />
               
                <div id="errorMessages"></div>
            </div>

            <div class="btn d-flex justify-content-end pb-4">
                <button type="submit" class="btn btn-info mx-3 p-2 px-4 submit" >Submit</button>
                <button type="button" class="btn btn-outline-info  px-4">Cancel</button>
            </div>
        </form>
    </div>
</div>


<partial name="~/Views/Shared/_PopUpModelForRequest.cshtml" />
<partial name="~/Views/Shared/_Footer.cshtml" />

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}