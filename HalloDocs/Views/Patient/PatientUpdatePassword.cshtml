@model HalloDocs.Entities.ViewModels.PatientUpdatePasswordViewModel;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/patientloginpage.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
</head>

<body>
    <partial name="_Notification" />

    <div class=" main-area d-flex h-100 w-100 position-relative">
        <div class="backgroungdimg"></div>
        <div class=" h-100 w-100 d-flex flex-column justify-content-between align-items-center position-absolute">
            <div class="w-100 ">
                <div class="w-100 d-flex justify-content-end pt-2 px-5">
                    <button type="button" class="btn btn-outline-info " onclick="dark_mode()"><i class="bi bi-moon moon-icon "></i></button>
                </div>
                <div class="w-100 d-flex justify-content-center">
                    <img src="~/SRS Screen Shorts/Fig56. Patient site 11.png" alt="">
                </div>
            </div>

            <div class="form">

                <h2 class="text-black my-4">Update Your Password</h2>

                <form asp-action="PatientUpdatePassword" asp-controller="Patient" method="post">

                    <div class="form-floating">
                        <input asp-for="PasswordHash" type="password" class="form-control" id="password" placeholder="Password">
                        <label class="control-label">Password</label>
                        <i class="bi bi-eye-slash icon" id="togglePassword"></i>
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="ConfirmPassword">
                        <label class="control-label">ConfirmPassword</label>
                        <i class="bi bi-eye-slash icon" id="toggleConfirmPassword"></i>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button class="container btn btn-info text-white py-2" type="submit">Create Password</button>


                </form>
            </div>
            <div class="text-center footer mb-5">
                <a href="#" class="text-muted text-decoration-none">Terms Of Conditions</a> |
                <a href="#" class="text-muted text-decoration-none">Privacy Policy</a>
            </div>

        </div>
    </div>
    <script src="~/js/PatientSite.js"></script>
</body>

</html>