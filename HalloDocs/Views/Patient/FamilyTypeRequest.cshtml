@model HalloDocs.Entities.ViewModels.FamilyFriendRequestViewModel;

@{
    Layout = "_Layout";
}
<partial name="~/Views/Shared/_Header.cshtml" />

<div class="min-h-100 d-flex flex-column justify-content-between align-items-center">
    <div class="container pb-5 px-0 m-0">
        <div class=" py-2 my-3 d-flex justify-content-end align-items-start">
            <a asp-route="SubmitRequestTypes" class="p-1 btn btn-outline-info"> &lt; Back  </a>
        </div>
        <form asp-controller="Patient" asp-action="FamilyTypeRequest" class="ps-4 shadow-lg boder-0 bg-white" enctype="multipart/form-data">
            <h5 class="pt-4">Family/Friend Information</h5>
            <div class="row input-group justify-content-between align-items-center">
                <div class="col-12 col-md-6 col-lg-6 mb-3 ">
                    <div class="form-floating ">
                        <input asp-for="FirstName" class="form-control" type="text" id="First-Name" placeholder="First Name" >
                        <label asp-for="FirstName">Your First Name</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class=" col-12 col-md-6 col-lg-6 mb-3">
                    <div class="form-floating ">
                        <input asp-for="LastName" class="form-control" type="text" id="Last-Name" placeholder="Last Name" >
                        <label asp-for="LastName">Your Last Name</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3  col-md-6 col-lg-6">
                    <div class="form-floating ">
                        <input asp-for="ContryCode" id="CountryCode" type="hidden" />
                        <input asp-for="PhoneNumber" type="tel" class="form-control" id="PhoneNumber" onchange="validatePhoneNumber()">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <span id="textChange"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6 mb-3 ">
                    <div class="form-floating ">
                        <input asp-for="Email" class="form-control" type="email" id="Email" placeholder="Email " >
                        <label asp-for="Email">Your Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6 mb-3">
                    <div class="form-floating ">
                        <input asp-for="RelationName" class="form-control" type="text" id="Last-Name" placeholder="Last Name" >
                        <label asp-for="RelationName">Relation With Patient</label>
                        <span asp-validation-for="RelationName" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <h5 class="pt-4">Patient Information</h5>
            <div class="row input-group justify-content-between align-items-center">
                <div class="col-12 mb-3 ">
                    <div class="form-floating ">
                        <textarea asp-for="PatientSymptoms" class="form-control" id="exampleFormControlTextarea1" rows="5" placeholder="Enter Brief Details Of Sympotonms (Optional)" ></textarea>
                        <label asp-for="PatientSymptoms" class="mx-3 ">Enter Brief Details Of Sympotonms (Optional)</label>
                        <span asp-validation-for="PatientSymptoms" class="text-danger"></span>
                    </div>
                </div>
                <div class=" col-12 col-md-6 col-lg-6 mb-3 ">
                    <div class="form-floating ">
                        <input asp-for="PatientFirstName" class="form-control" type="text" id="First-Name" placeholder="First Name" >
                        <label asp-for="PatientFirstName">First Name</label>
                        <span asp-validation-for="PatientFirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class=" col-12 col-md-6 col-lg-6 mb-3">
                    <div class="form-floating ">
                        <input asp-for="PatientLastName" class="form-control" type="text" id="Last-Name" placeholder="Last Name" >
                        <label asp-for="PatientLastName">Last Name</label>
                        <span asp-validation-for="PatientLastName" class="text-danger"></span>

                    </div>
                </div>
                <div class=" col-12 col-md-6 col-lg-6 mb-3">
                    <div class="form-floating ">
                        <input asp-for="PatientDateOfBirth" class="form-control" type="date" id="date-of-birth" max="@DateTime.Now.ToString("yyyy-MM-dd")" placeholder="date-of-birth" >
                        <label asp-for="PatientDateOfBirth">Date Of Birth</label>
                        <span asp-validation-for="PatientDateOfBirth" class="text-danger"></span>

                    </div>
                </div>
            </div>

            <h5 class="pt-4">Patient Contact Information</h5>
            <div class=" row input-group mb-3 justify-content-between align-items-center">
                <div class=" col-12 col-md-6 col-lg-6 mb-3 ">
                    <div class="form-floating">
                        <input asp-for="PatientEmail" class="form-control" type="email" id="Email" placeholder="Email " >
                        <label asp-for="PatientEmail">Email</label>
                        <span asp-validation-for="PatientEmail" class="text-danger"></span>

                    </div>
                </div>
                <div class="mb-3  col-md-6 col-lg-6">
                    <div class="form-floating">
                        <input asp-for="PatientContryCode" id="PatientCountryCode" type="hidden" />
                        <input asp-for="PatientPhoneNumber" type="tel" class="form-control" id="PatientPhoneNumber" onchange="patientvalidatePhoneNumber()">
                        <span asp-validation-for="PatientPhoneNumber" class="text-danger"></span>
                        <span id="patienttextChange"></span>

                    </div>
                </div>
            </div>

            <h5 class="pt-4">Patient Location</h5>
            <div class="row input-group mb-3 justify-content-between align-items-center">
                <div class=" col-12 col-md-6 col-lg-6 mb-3 row2">
                    <div class="form-floating">
                        <input asp-for="PatientStreet" class="form-control" type="text" id="Street" placeholder="Street" >
                        <label asp-for="PatientStreet">Street</label>
                        <span asp-validation-for="PatientStreet" class="text-danger"></span>

                    </div>
                </div>
                <div class=" col-12 col-md-6 col-lg-6 mb-3 ">
                    <div class="form-floating">
                        <input asp-for="PatientCity" class="form-control" type="text" id="City" placeholder="City" >
                        <label asp-for="PatientCity">City</label>
                        <span asp-validation-for="PatientCity" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6  mb-3 ">
                    <div class="form-floating">
                        <input asp-for="PatientState" class="form-control" type="text" id="State" placeholder="State" >
                        <label asp-for="PatientState">State</label>
                        <span asp-validation-for="PatientState" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6  mb-3">
                    <div class="form-floating">
                        <input asp-for="PatientZipCode" class="form-control" type="text" id="Zip Code" placeholder="Zip Code" >
                        <label asp-for="PatientZipCode">Zip Code</label>
                        <span asp-validation-for="PatientZipCode" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="PatientRoomNumber" class="form-control" type="text" id="Room" placeholder="Room #/ Suit (Optional)" >
                        <label asp-for="PatientRoomNumber">Room # / Suit (Optional)</label>
                        <span asp-validation-for="PatientRoomNumber" class="text-danger"></span>

                    </div>
                </div>

            </div>
            <h5 class="pt-4">(Optional) Upload Photo Or document</h5>
            <div class="input-group mb-3">
                <label class="input-group-text custom-file-upload w-100" for="patientFile">
                    <div class="w-100 d-flex justify-content-between">
                        <p class="m-0 p-0" id="fileName">Select File</p>
                        <div class="d-flex upload-button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#FFFFFF"
                                 class="bi bi-cloud-arrow-up" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                      d="M7.646 5.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 6.707V10.5a.5.5 0 0 1-1 0V6.707L6.354 7.854a.5.5 0 1 1-.708-.708z" />
                                <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
                            </svg>
                            <span>Upload</span>
                        </div>
                    </div>
                </label>
                <input asp-for="formFile"  type="file" class="form-control d-none" id="patientFile" multiple onchange="GetFileSizeNameAndType()" />
                <div id="errorMessages"></div>
            </div>

            <div class="pb-4 btn d-flex justify-content-end">
                <button type="submit" class="btn btn-info mx-3 p-2 px-4 submit">Submit</button>
                <button type="button" class="btn btn-outline-info mx-2 p-2 px-4">Cancle</button>
            </div>
        </form>


    </div>

</div>

<partial name="~/Views/Shared/_PopUpModelForRequest.cshtml" />
<partial name="~/Views/Shared/_Footer.cshtml" />

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
